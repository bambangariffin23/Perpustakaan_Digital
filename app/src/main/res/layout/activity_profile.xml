<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_gravity="start"
            android:backgroundTint="#90CAF9"
            android:text="Kembali"
            android:textAllCaps="false"
            android:textColor="#0D47A1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            app:cardBackgroundColor="#B3E1F6"
            app:cardCornerRadius="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:stretchColumns="1">

                <TableRow
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="133dp"
                        android:gravity="left"
                        android:text="Nama"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvName"
                        android:gravity="center"
                        android:text="Nama Pengguna"
                        android:textColor="#3F51B5"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:gravity="center|left"
                        android:text="Username"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUsername"
                        android:gravity="center"
                        android:text="@username"
                        android:textColor="#263238"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:gravity="center|left"
                        android:text="Email"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:gravity="center"
                        android:text="user@email.com"
                        android:textColor="#263238"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:gravity="center|left"
                        android:text="No HP"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:gravity="center"
                        android:text="08xxxxxxxxxx"
                        android:textColor="#263238"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:text="Alamat"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:gravity="center"
                        android:text="Bandung, Jawa Barat"
                        android:textColor="#263238"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <TextView
                        android:gravity="center|left"
                        android:text="Bergabung"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvJoinDate"
                        android:gravity="center"
                        android:text="01 Januari 2026"
                        android:textColor="#263238"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textAllCaps="false"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textAllCaps="false"
            android:backgroundTint="#455A64"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAbout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#455A64"
            android:text="Tentang Aplikasi"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>