<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Kembali"
            android:textAllCaps="false"
            android:backgroundTint="#90CAF9"
            android:textColor="#0D47A1"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_gallery"
            tools:srcCompat="@drawable/sherlock_holmes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sherlock Holmes"
            android:textColor="#0D47A1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Penulis: Sir Arthur Conan Doyle"
            android:textColor="#546E7A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopsis:\nBuku ini membahas dunia detektif sherlock holmes."
            android:textColor="#37474F" />
    </LinearLayout>
</ScrollView>
