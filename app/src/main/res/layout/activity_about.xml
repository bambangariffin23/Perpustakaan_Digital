<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar / AppBar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#1E88E5"
            android:title="Tentang Aplikasi"
            android:titleTextColor="#FFFFFF"
            android:elevation="8dp" />

        <!-- Logo App Circular dengan shadow -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:elevation="12dp"
            android:padding="16dp"/>

        <!-- Nama & Versi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perpustakaan Digital"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi 1.0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- CardView Info Aplikasi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Aplikasi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Baca dan kelola koleksi buku secara mudah.\n• Favoritkan buku favoritmu.\n• Cari buku berdasarkan kategori dan penulis.\n• Profil pengguna dengan personalisasi."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView Developer + Kontak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dibuat oleh"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Kamu"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:backgroundTint="#1976D2"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnLinkedIn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn"
                        android:backgroundTint="#0D47A1"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView Sosial Media / Share -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagikan Aplikasi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnShare"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Bagikan"
                        android:backgroundTint="#0288D1"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnRate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rate App"
                        android:backgroundTint="#43A047"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2026 Perpustakaan Digital. All rights reserved."
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"/>

    </LinearLayout>
</ScrollView>
