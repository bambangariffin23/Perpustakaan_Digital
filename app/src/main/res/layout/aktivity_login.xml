<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/pngtree_library_logo_vector_icon_illustration_label_symbol_simple_vector_png_image_39896786" />

            <!-- Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Email Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Masukkan Email"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/editTextLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_form_daftar"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/blue_light"
                android:textSize="16sp"
                android:padding="12dp"/>

            <!-- Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Masukkan Password"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/editTextLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_form_daftar"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/blue_light"
                android:textSize="16sp"
                android:padding="12dp"/>

            <!-- Link Daftar -->
            <TextView
                android:id="@+id/tvDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Belum punya akun? Daftar"
                android:textColor="@color/blue_primary"
                android:textSize="14sp" />

            <!-- Button Login -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/blue_primary"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
